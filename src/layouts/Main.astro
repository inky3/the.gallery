---
/* âœ… POINT THIS TO YOUR REAL GLOBAL CSS (adjust the path) */
import "../styles/theme.css"; // e.g. "../styles/global.css" or "../css/global.css"

const { head = "", description = "" } = Astro.props;
const base = import.meta.env.BASE_URL || "/";
const url  = (p = "/") => `${base}${String(p).replace(/^\/+/, "")}`;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    {head && <title>{head}</title>}
    {description && <meta name="description" content={description} />}
    <link rel="icon" href={url("/favicon.svg")} />
  </head>

  <body class="page">
    <!-- Top nav (provided by pages via <Fragment slot="nav"><Nav /></Fragment>) -->
    <header class="page__header">
      <slot name="nav" />
    </header>

    <!-- Main content grows to push footer down -->
    <main id="main" class="page__content" role="main">
      <slot />
    </main>

    <!-- Footer (provided by pages via <Fragment slot="footer"><Footer /></Fragment>) -->
    <footer class="page__footer">
      <slot name="footer" />
    </footer>

    <style is:global>
      /* Minimal safety so the page doesn't look broken if global.css path is wrong */
      html, body { height: 100%; }
      a { color: inherit; text-decoration: none; }
    </style>

    <style>
      /* Sticky-footer layout */
      .page{
        min-height: 100dvh;
        display: flex;
        flex-direction: column;
        background: var(--bg-page, #f7f8f9);
      }
      .page__header{ flex: 0 0 auto; }
      .page__content{ flex: 1 0 auto; }
      .page__footer{ flex: 0 0 auto; margin-top: auto; }
    </style>
  </body>
</html>
