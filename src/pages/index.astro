---
import Main from "../layouts/Main.astro";
import Card from "../components/Card.astro";
import "bootstrap/dist/css/bootstrap.min.css";


---

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      // Gallery filter logic
      const filterNav = document.getElementById("filterNav");
      const cards = document.querySelectorAll(".gallery-card");

      filterNav.addEventListener("click", (e) => {
        if (e.target.tagName !== "A") return;
        e.preventDefault();

        // Update active state
        filterNav.querySelectorAll("a").forEach((link) => link.classList.remove("active"));
        e.target.classList.add("active");

        const filter = e.target.getAttribute("data-filter");

        cards.forEach((card) => {
          if (filter === "all" || card.dataset.category === filter) {
            card.classList.remove("hide");
          } else {
            card.classList.add("hide");
          }
        });xz
      });

      const navLinks = document.querySelectorAll('.navline a');
      const indicator = document.querySelector('.indicator');

      function moveIndicator(element) {
        const linkRect = element.getBoundingClientRect();
        const parentRect = element.closest(".navline").getBoundingClientRect();

        indicator.style.width = `${linkRect.width}px`;
        indicator.style.left = `${linkRect.left - parentRect.left}px`;
      }

      // Init on page load
      const activeLink = document.querySelector('.navline a.active');
      if (activeLink) moveIndicator(activeLink);

      // Update on click
      navLinks.forEach(link => {
        link.addEventListener('click', (e) => {
          navLinks.forEach(l => l.classList.remove('active'));
          e.target.classList.add('active');
          moveIndicator(e.target);
        });
      });

    </script>

    <Main> 
          <section class="py-5">
      <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2 class="mb-0">From Our Gallery</h2>
          <!-- Filter Nav -->
          <ul class="nav navline" id="filterNav">
            <li class="nav-item">
              <a class="nav-link active" data-filter="all" href="#">Highlight</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" data-filter="poster" href="#">Poster</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" data-filter="photography" href="#">Photography</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" data-filter="terrarium" href="#">Terrarium</a>
            </li>
            <!-- Indicator lives here -->
            <div class="indicator"></div>
          </ul>
        </div>

        <!-- Gallery Cards -->
        <div class="row g-4 position-relative" id="gallery">
          <!-- Example Items with categories -->
          <Card title="Poster Item" image="img/blank.jpg" category="poster" href="#" />
          <Card title="Photography Item" image="img/blank.jpg" category="photography" href="#" />
          <Card title="Terrarium Item" image="img/blank.jpg" category="terrarium" href="#" />
          <Card title="Poster Item 2" image="img/blank.jpg" category="poster" href="#" />
          <Card title="Photography Item 2" image="img/blank.jpg" catagoet="photography" href="#" /> 

      </div>
    </section>
    </Main>

    <style>
      /* Animation for slide effect */
      .gallery-card {
        transition: transform 0.4s ease, opacity 0.4s ease;
      }
      .hide {
        opacity: 0;
        transform: translateX(-50px);
        pointer-events: none;
        position: absolute;
      }
      .navline {
        display: flex;
        justify-content: center;
        gap: 2rem;
        position: relative;
        padding: 0.3rem 0;
        border-bottom: 2px solid #555;
      }

      .navline a {
        text-decoration: none;
        font-size: 1rem;
        color: #888;
        font-weight: normal;
        position: relative;
        padding-bottom: 0.5rem;
        transition: color 0.3s ease;
      }

      .navline a.active {
        color: #000;
        font-weight: bold;
      }

      /* Underline + Triangle indicator */
      .indicator {
        position: absolute;
        bottom: -2px;
        height: 2px;
        background: #000;
        transition: all 0.3s ease;
      }

      /* Triangle accent */
      .indicator::before {
        content: '';
        position: absolute;
        top: -5px;
        left: 50%;
        transform: translateX(-50%);
        width: 0;
        height: 0;
        border-left: 6px solid transparent;
        border-right: 6px solid transparent;
        border-bottom: 6px solid #000;
      }

    </style>