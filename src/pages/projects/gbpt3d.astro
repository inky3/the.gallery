---
import Project from "../../layouts/Project.astro";
import CaseMedia from "../../components/CaseMedia.astro";

/** ===== Page Meta ===== */
const page = {
  title: "GBPT3D",
  meta: "UX/UI • 3D Printing Service (Prototype)",
  lead:
    "โพรเจกต์ออกแบบ UX/UI สำหรับบริการออกแบบ-พิมพ์ชิ้นงาน 3 มิติ—โฟกัสการสื่อสารคุณค่า (Why us), เส้นทางเลือกบริการ (Service Flow) และประสบการณ์ทั้งเดสก์ท็อปและมือถือ",
  cover: "/img/project/gbpt3d/index.png",
  timeframe: "2024",
  role: ["UX Strategy", "UX/UI Design", "Component Spec"],
  stack: ["Figma Prototype", "Responsive Spec"],
};

/** ===== Prototype Links ===== */
const links = {
  figmaDesktop: "https://www.figma.com/proto/ucszbu4aEUy7phqyFxME9w/Untitled?node-id=116-848&t=5J8a9DvYhJEIwENw-1",
  figmaMobile:  "https://www.figma.com/proto/ucszbu4aEUy7phqyFxME9w/Untitled?node-id=113-67&t=5J8a9DvYhJEIwENw-1",
};
---

<Project
  {...page}
  heroAlign="center"
  heroValign="center"
  heroOverlay={0.18}
  heroHeight={240}
>

  <!-- ===== Overview ===== -->
  <section class="case-block">
    <h2 class="case-head">ภาพรวม (Overview)</h2>
    <p class="lead-sm">
      <b>GBPT3D</b> วางโฟลว์การตัดสินใจแบบ “เลือกบริการ → ดูสเปก/ราคาโดยสังเขป → เริ่มสั่งงาน/ปรึกษา”
      ใช้คอมโพเนนต์การ์ดโค้งมน โทนไล่สีฟ้า-เขียว เพื่อสร้างภาพลักษณ์มืออาชีพ-ทันสมัย และอ่านง่าย
    </p>

    <div class="meta-grid">
      <div><span class="k">บทบาท</span><span class="v">UX Strategy • UX/UI Design • Component Spec</span></div>
      <div><span class="k">ขอบเขต</span><span class="v">Landing (Value Prop) + Services Catalog + Onboarding/Account</span></div>
      <div><span class="k">จุดเด่น</span><span class="v">สื่อสาร USP ชัด, CTA เด่น, โครงสร้างพร้อมสเกลสู่ e-commerce/light CRM</span></div>
      <div><span class="k">สถานะ</span><span class="v">ต้นแบบ Figma พร้อมส่งมอบทีม Dev</span></div>
    </div>

    <div class="media-grid">
      <div class="media mild">
        <CaseMedia image="../../img/project/gbpt3d/index.png" caption="Overview — Desktop" />
      </div>
    </div>
  </section>

  <!-- ===== Services ===== -->
  <section class="case-block band-soft">
    <h2 class="case-head">บริการ (Service Catalog)</h2>
    <p>
      โมดูลบริการออกแบบเป็นการ์ดขนาดใหญ่พร้อมภาพอุปกรณ์จริง เพื่อลดเวลา “ทำความเข้าใจบริการ” และดัน Conversion
      ด้วย CTA ที่เด่น (รับปรึกษา/คุยราคา)
    </p>
    <ul class="bullets">
      <li>กลุ่มบริการหลัก: ปริ้น 3D • ปริ้น Resin • 3D Scan • 3D Modeling</li>
      <li>สเตตัส/ราคาเบื้องต้นบนการ์ดเพื่อคัดกรองเร็ว</li>
      <li>รองรับแบนเนอร์โปรโมชันหรือบริการเสริม</li>
    </ul>
    <div class="media-grid">
      <div class="media mild">
        <CaseMedia image="../../img/project/gbpt3d/service.png" caption="Services — Desktop" />
      </div>
    </div>
  </section>

  <!-- ===== Onboarding ===== -->
  <section class="case-block">
    <h2 class="case-head">สมัครสมาชิก (Onboarding)</h2>
    <p>
      ฟอร์มย่อให้อยู่ในหนึ่งจอ พร้อม SSO (Google/Apple) ลดแรงเสียดทาน และรองรับข้อมูลเบื้องต้นที่จำเป็นต่อใบเสนอราคา
    </p>
    <ul class="bullets">
      <li>SSO ลดขั้นตอนและลด drop-off</li>
      <li>พื้นหลังมืออาชีพ เน้นความไว้วางใจ</li>
      <li>โครงสร้างพร้อมต่อยอดสู่ระบบใบงาน/ติดตามสถานะ</li>
    </ul>
    <div class="media-grid">
      <div class="media mild">
        <CaseMedia image="../../img/project/gbpt3d/register.png" caption="Register — Desktop" />
      </div>
    </div>
  </section>

  <!-- ===== Mobile Preview (reduced) ===== -->
  <section class="case-block band-soft">
    <h2 class="case-head">Mobile Preview</h2>
    <div class="phones">
      <figure><img src="../../img/project/gbpt3d/index-phone.png" alt="Hero (Mobile)" /><figcaption>Hero</figcaption></figure>
      <figure><img src="../../img/project/gbpt3d/service-phone.png" alt="Services (Mobile)" /><figcaption>Services</figcaption></figure>
      <figure><img src="../../img/project/gbpt3d/register-phone.png" alt="Register (Mobile)" /><figcaption>Register</figcaption></figure>
    </div>
  </section>

  <!-- ===== Prototype CTAs ===== -->
  <section class="section">
    <div class="container-narrow">
      <div class="deliver">
        <a class="cta big" href={links.figmaDesktop} target="_blank" rel="noreferrer">ดูต้นแบบ (Desktop)</a>
        <a class="cta ghost" href={links.figmaMobile}  target="_blank" rel="noreferrer">ดูต้นแบบ (Mobile)</a>
      </div>
    </div>
  </section>

</Project>

<style is:global>
  /* Copy scale */
  .lead-sm{ font-size:1.05rem; line-height:1.6; }

  /* Meta rows */
  .meta-grid{ display:grid; gap:.35rem; margin:.6rem 0 0; }
  .meta-grid .k{ color:#66707a; width:120px; display:inline-block; }
  .meta-grid .v{ color:#101418; }

  /* Mildly reduced media (desktop figures) */
  .media.mild :global(.frame),
  .media.mild :where(img,video){
    max-width: 860px; width:100%; margin-inline:auto;
  }
  @media (max-width: 640px){
    .media.mild :global(.frame),
    .media.mild :where(img,video){ max-width: 560px; }
  }

  /* Phone strip */
  .phones{
    --w: 280px;
    display:grid; grid-template-columns: repeat(3, minmax(0,1fr));
    gap:.9rem; justify-items:center;
  }
  .phones figure{ margin:0; text-align:center; }
  .phones img{ width: var(--w); max-width:100%; border-radius:18px; border:1px solid rgba(0,0,0,.12); box-shadow:0 10px 22px rgba(0,0,0,.12); }
  .phones figcaption{ font-size:.9rem; color:#47515b; margin-top:.4rem; }
  @media (max-width:900px){ .phones{ grid-template-columns:1fr 1fr; } }
  @media (max-width:560px){ .phones{ grid-template-columns:1fr; } }

  /* Bottom CTAs (reuse pattern) */
  .deliver{
    margin:1.1rem 0 0; display:flex; flex-wrap:wrap; gap:.65rem; justify-content:center;
  }
  .cta{ display:inline-block; padding:.7rem 1.1rem; border-radius:999px; font-weight:800; text-decoration:none; box-shadow:0 3px 10px rgba(0,0,0,.08); transition:transform .15s, box-shadow .15s, background .15s; }
  .cta.big{ background:#0f6657; color:#fff; border:1px solid #0f6657; }
  .cta.big:hover{ transform:translateY(-2px); box-shadow:0 10px 20px rgba(15,102,87,.25); }
  .cta.ghost{ background:#fff; color:#111; border:1px solid rgba(0,0,0,.12); }
  .cta.ghost:hover{ transform:translateY(-2px); box-shadow:0 10px 18px rgba(0,0,0,.12); }
</style>
