---
const { images = [], name, info } = Astro.props;
---

<!-- Right Container (Collage) -->
<div class="right-panel">
  <div class="collage-wrapper">
    <div class="collage">
      {Array.from({ length: 9 }).map((_, i) => (
        <div class={`item item-${i + 1} fade-in`} style={{ "--delay": `${i * 0.1}s` }} key={i}>
          <img
            src={images[i]?.src || "../../img/blank.jpg"}
            alt={images[i]?.title || `Image ${i + 1}`}
          />
        </div>
      ))}
    </div>
  </div>
</div>

<!-- Below Container -->
<div class="below-panel fade-in">
  <h2>{name}</h2>
  <p>{info}</p>
</div>

<style>
  /* --------------------------
     Collage Wrapper
  ---------------------------*/
  .collage-wrapper {
    max-width: 1000px;
    margin: auto;
    padding: 20px;
  }

  .collage {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    grid-template-rows: repeat(6, 120px);
    gap: 12px;
  }

  .collage img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    border-radius: 6px;
  }

/* --------------------------
    Fade-in Raise Animation
  ---------------------------*/
  .fade-in {
    opacity: 0;
    transform: translateY(30px); /* start lower */
    animation: fadeRaise 0.8s ease forwards;
  }

  @keyframes fadeRaise {
    to {
      opacity: 1;
      transform: translateY(0); /* settle in place */
    }
  }

  /* --------------------------
    Sequential delays per item
  ---------------------------*/
  .item-1 { animation-delay: 0s; }
  .item-2 { animation-delay: 0.3s; }
  .item-3 { animation-delay: 0.6s; }
  .item-4 { animation-delay: 0.9s; }
  .item-5 { animation-delay: 1.2s; }
  .item-6 { animation-delay: 1.5s; }
  .item-7 { animation-delay: 1.8s; }
  .item-8 { animation-delay: 2.1s; }
  .item-9 { animation-delay: 2.4s; }



  /* --------------------------
     Collage Item Placements
  ---------------------------*/
  .item-1 { grid-column: 1 / span 2; grid-row: 1 / span 2; }
  .item-2 { grid-column: 3 / span 1; grid-row: 1 / span 1; }
  .item-3 { grid-column: 4 / span 3; grid-row: 1 / span 1; }

  .item-4 { grid-column: 1 / span 3; grid-row: 3 / span 2; }
  .item-5 { grid-column: 4 / span 2; grid-row: 2 / span 3; }
  .item-6 { grid-column: 6 / span 1; grid-row: 3 / span 2; }

  .item-7 { grid-column: 1 / span 2; grid-row: 5 / span 2; }
  .item-8 { grid-column: 3 / span 2; grid-row: 5 / span 1; }
  .item-9 { grid-column: 5 / span 2; grid-row: 5 / span 2; }

  /* Hover effect */
  .collage img:hover {
    transform: scale(1.05);
    transition: transform 0.3s ease;
  }

  /* Below Panel Styling */
  .below-panel {
    background: #f8f8f8;
    padding: 50px;
    border-radius: 8px;
    margin-top: 20px;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .collage {
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: auto;
    }
    .collage div {
      grid-column: auto !important;
      grid-row: auto !important;
    }
  }
</style>
