---
const { image, alt, title, category, href } = Astro.props;
---

<div class="col-lg-4 col-sm-6 gallery-card" data-category={category}>
  <a href={href} class="text-decoration-none">
    <div class="card h-100 shadow-sm">
      <div class="card-img-box">
        <img src={image || "../../img/blank.jpg"} class="card-img-top" alt={alt || title} />
      </div>
      <div class="card-body text-center">
        <h5 class="card-title">{title}</h5>
      </div>
    </div>
  </a>
</div>

<style>
  .card-img-box {
    width: 100%;
    height: 250px; /* Fixed height for all cards, adjust as needed */
    overflow: hidden; 
    border-top-left-radius: 0.25rem;
    border-top-right-radius: 0.25rem;
  }

  .card-img-box img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Ensures zoom + crop to fill box */
  }

  .gallery-card {
    transition: transform 0.4s ease, opacity 0.4s ease;
  }

  .hide {
    opacity: 0;
    transform: translateX(-50px);
    pointer-events: none;
    position: absolute;
  }
</style>
