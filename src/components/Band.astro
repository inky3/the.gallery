---
import { Image } from 'astro:assets';

/**
 * Band.astro â€“ full-width band component for hero/introduction sections
 * Props: { title, lead, align, valign, variant, height, overlay }
 */
const {
  title = '',
  lead = '',
  align = 'center',
  valign = 'center',
  variant = 'light',
  height = 220,
  overlay = 0,
  background = '',
} = Astro.props;
---

<section
  class={`band ${variant ? `band-${variant}` : ''} align-${align} valign-${valign}`}
  style={`min-height:${height}px;${background ? `background-image:url(${background});` : ''}`}
>
  {overlay > 0 && <div class="band__overlay" style={`opacity:${overlay}`}></div>}
  <div class="band__inner">
    {title && <h1 class="band__title">{title}</h1>}
    {lead && <p class="band__lead">{lead}</p>}
  </div>
</section>

<style>
  .band {
    position: relative;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    background: var(--bg-soft, #f6f7f8);
    color: var(--text-strong, #101418);
    text-align: center;
  }

  .band-dark {
    background: var(--bg-section-dark, #0f1113);
    color: var(--text-on-dark, #e9ecef);
  }

  .band__overlay {
    position: absolute;
    inset: 0;
    background: #000;
    z-index: 1;
  }

  .band__inner {
    position: relative;
    z-index: 2;
    max-width: 1200px;
    margin-inline: auto;
    padding: 3.5rem 1.25rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    height: 100%;
  }

  .band__title {
    font-weight: 900;
    font-size: clamp(1.8rem, 2.5vw, 2.3rem);
    margin: 0 0 0.4rem;
  }

  .band__lead {
    font-size: clamp(1rem, 1.4vw, 1.15rem);
    margin: 0;
    opacity: 0.85;
  }
</style>
