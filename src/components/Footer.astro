---
const year = new Date().getFullYear();
---
<footer class="site-footer" role="contentinfo">
  <div class="container-narrow">
    <div class="footer-cols">
      <!-- Brand / blurb -->
      <div>
        <div class="brand">THE.GALLERY</div>
        <p class="muted" style="max-width:42ch">
          A quiet place for work and memories. Simple, calm, and intentional.
        </p>
      </div>

      <!-- Work links -->
      <div>
        <div class="f-head">Work</div>
        <ul class="f-list">
          <li><a href="/poster">Poster</a></li>
          <li><a href="/photography">Photography</a></li>
          <li><a href="/terrarium">Terrarium</a></li>
          <li><a href="/blender">Blender</a></li>
          <li><a href="/book">Book</a></li>
          <li><a href="/about">About</a></li>
        </ul>
      </div>

      <!-- CTA -->
      <div>
        <div class="f-head">Get in touch</div>
        <p class="muted" style="max-width:42ch">
          Let’s collaborate on a clean, accessible interface.
        </p>
        <a href="/about" class="btn btn--sm">Contact</a>
        <div class="social">
          <a href="https://github.com" rel="noopener" aria-label="GitHub">GitHub</a>
          <span>•</span>
          <a href="/projects">Projects</a>
        </div>
      </div>
    </div>

    <hr class="f-rule" />

    <div class="legal">
      <small class="muted">© {year} THE.GALLERY</small>
      <small class="muted">Built with Astro • Deployed on GitHub Pages</small>
    </div>
  </div>
</footer>
